@page 
@model CartModel

<h2>Your cart</h2>
<table class="table"> <!-- striped -->
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th>Price</th> <!-- right-justify these. -->
            <th>Subtotal</th> <!-- right-justify. -->
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model?.Cart?.Lines ?? Enumerable.Empty<CartLine>()) {
            <tr>
                <td>@line.Quantity</td> <!-- center -->
                <td>@line.Product.Name</td> <!-- left -->
                <td>@line.Product.Price.ToString("c")</td> <!-- right -->
                <td>@line.Subtotal.ToString("c")</td> <!-- right -->
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"></td> <!-- right-justify. -->
            <td>@Model?.Cart?.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div> <!-- center -->
    <a href="@Model?.ReturnUrl">Continue shopping</a> <!-- Make it look like a button. -->
</div>