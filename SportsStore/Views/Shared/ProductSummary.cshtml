@model Product

<div class="relative border-2 border-black p-3 rounded bg-gray-100 drop-shadow-xl pb-8">
    <h3 class="float-right rounded-full bg-blue-800 text-white px-2">@Model?.Price.ToString("c")</h3>
    <h2 class="text-xl">@Model?.Name</h2>
    <p>@Model?.Description</p>

    <div class="absolute right-1 bottom-1">
        <form id="@Model?.ProductId" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="rounded-full bg-green-800 text-white px-2">Add to Cart</button>
        </form>
    </div>

</div>
