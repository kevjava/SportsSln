@model ProductsListViewModel

<div class="flex flex-col">
    <div class="grid gap-4 grid-cols-3 m-3">
        @foreach (var product in Model?.Products ?? Enumerable.Empty<Product>()) {
            <div class="border-2 border-black p-3 rounded">
                <h4 class="float-right rounded-full bg-blue-800 text-white px-2">@product.Price.ToString("c")</h4>
                <h3 class="text-xl">@product.Name</h3>
                <p>@product.Description</p>
            </div>
        }
    </div>

    <div class="p-4">
        <div page-model="@Model?.PagingInfo" page-action="Index"></div>
    </div>

</div>
